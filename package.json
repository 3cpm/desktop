{
  "name": "3c-portfolio-manager",
  "productName": "3C Portfolio Manager",
  "version": "0.0.1",
  "description": "An application to manage your 3Commas portfolio.",
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "watch": "webpack --env environment=development --config webpack.config.js --watch",
    "build": "webpack --env environment=production --config webpack.config.js",
    "start": "electron .",
    "rebuild": "./node_modules/.bin/electron-rebuild -f -w better-sqlite3",
    "pack": " electron-builder --dir ",
    "dist": " electron-builder --mac"
  },
  "author": "Colton",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@material-ui/core": "^4.12.1s",
    "@material-ui/data-grid": "^4.0.0-alpha.33",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/pickers": "^3.3.10",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.7",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^2.3.5",
    "electron-reload": "^1.5.0",
    "html-webpack-plugin": "^5.3.2",
    "react": "^17.0.2",
    "react-d3-speedometer": "^1.0.1",
    "react-dom": "^17.0.2",
    "react-gauge-chart": "^0.3.0",
    "react-router-dom": "^5.2.0",
    "recharts": "^2.0.10",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "3commas-api-node": "^1.0.9",
    "better-sqlite3": "^7.4.1",
    "date-fns": "^2.22.1",
    "dot-prop": "^6.0.1",
    "electron-store": "^8.0.0"
  },
  "build": {
    "appId": "portfoliomanager.electron.com",
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "icon": "assets/icons/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "publisherName": "Colton Shaw"
    },
    "linux": {
      "icon": "assets/icons"
    }
  }
}
