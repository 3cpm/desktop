{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "webapp/*": [
        "src/webapp/*"
      ],
      "electron/*": [
        "src/electron/*"
      ],
      "common/*": [
        "src/common/*"
      ],
      "types/*": [
        "src/types/*"
      ],
    },
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2021",
      "es6"
    ],
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "react/next",
      "react-dom/next",
      "jest"
    ]
  }
}